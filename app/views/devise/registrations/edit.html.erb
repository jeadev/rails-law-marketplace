<div class="container mt-3 col-6 offset-3">

  <!-- <center><h2>Edit <%= resource_name.to_s.humanize%></h2></center> -->

  <center><h2>Mettre à jour votre profil</h2></center>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="mb-4">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      </div>
      <h3>Sécurité 🔐</h3>
      <%= f.input :current_password, :label => "Mot de passe actuel",
                  hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :password, :label => "Nouveau mot de passe",
                  hint: "Laissez-le vide si vous ne souhaitez pas le changer",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, :label => "Confirmation de votre nouveau mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
  <% end %>
    <%= simple_form_for(@user) do |f| %>
      <h3>Informations perso 👨🏻‍💻</h3>
      <%= f.input :avatar %>
      <%= f.input :avatar_cache, as: :hidden %>
      <%= f.input :first_name, :label => "Prénom" %>
      <%= f.input :last_name, :label => "Nom" %>
      <%= f.input :email, :label => "Email" %>
      <%= f.input :address, :label => "Ville" %>
      <%= f.input :job, collection: User::JOBS, :label => "Rôle" %>
      <% if @user.job.nil? == false %>
        <%= f.input :firm, :label => "Entreprise" %>
        <%= f.input :experience, :label => "Expérience" %>
        <%= f.input :specialty, :label => "Spécialité(s) (séparer par une virgule)" %>
        <%= f.input :description, :label => "Description" %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour", class: 'text-center mt-2 btn btn-primary' %>
    </div>
  <% end %>

  <div class="edit-user-delete mt-3">
  <h3>Supprimer mon compte</h3>

  <p>Insatisfait ? <%= link_to "Supprimer", registration_path(resource_name), data: { confirm: "Voulez vous vraiment supprimer votre compte ?" }, method: :delete %></p>

  <%= link_to "Retour", :back, class: 'text-center mb-3 btn btn-primary'%>
  </div>
</div>
