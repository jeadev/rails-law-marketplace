<h1>Les procédures : </h1>


<% @services.each do |service| %>
  <tr>
    <td><%= service.title %></td>
    <td><%= service.category %></td>
    <td><%= service.description %></td>
    <td><%= service.duration %></td>
    <td><%= service.price %></td>
    <td><%= link_to 'Show', service %></td>
    <% if service.user = current_user %>
      <td><%= link_to 'Edit', edit_service_path(service) %></td>
      <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Êtes vous sur de vouloir supprimer cette prestation?' } %></td>
    <% end %>
  </tr>
<% end %>

<%= link_to 'Nouvelle prestation', new_service_path %>
