<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
	<%= link_to root_path, class: "navbar-brand" do %>
		<%= image_tag "default.png", width: "250px"%>
	<% end %>

	<button
		class="navbar-toggler"
		type="button"
		data-toggle="collapse"
		data-target="#navbarSupportedContent"
		aria-controls="navbarSupportedContent"
		aria-expanded="false"
		aria-label="Toggle navigation"
	>
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav mr-auto">
			<% if user_signed_in? %>
			<li class="nav-item active">
				<%= link_to "Tableau de Bord", profile_path, class: "nav-link stylish-link" %>
			</li>
			<li class="nav-item active">
				<%= link_to "Home", root_path, class: "nav-link stylish-link" %>
			</li>
				<% if current_user.specialty.nil? %> 
					<%= image_tag "avatar-heisen.png", class: "avatar dropdown-toggle",
					id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
					<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
				<% else  %>
					<%= image_tag "avatar-saul.png", class: "avatar dropdown-toggle",
					id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
					<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown"> 
				<% end  %> 
			<li class="nav-item dropdown">
					<% if current_user.specialty.nil? %>
						<%= link_to "Avocat?", edit_lawyer_path, class: "dropdown-item" %> 
					<% end %> 
					<%= link_to "Edit profile", edit_lawyer_path, class: "dropdown-item" %>
					<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
			</li>
			<% else %>
			<li class="nav-item">
				<%= link_to "S'enregistrer", new_user_registration_path, class: "nav-link" %>
			</li>
			<li class="nav-item">
				<%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
			</li>
			<% end %>
		</ul>
	</div>
</div>
